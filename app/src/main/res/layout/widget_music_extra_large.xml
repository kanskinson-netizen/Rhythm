<?xml version="1.0" encoding="utf-8"?>
<!-- 4x4 Extra Large Widget - Premium Layout with Maximum Detail -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="26dp">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Album Art Section - Large and Prominent -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/album_art"
                android:background="@drawable/album_art_background"
                android:layout_margin="14dp"
                android:clipToOutline="true"
                android:elevation="4dp" />
        </FrameLayout>

        <!-- Song Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_song_playing"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/widget_on_surface_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_artist"
                android:textSize="17sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:alpha="0.9" />

            <TextView
                android:id="@+id/widget_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_album"
                android:textSize="15sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Controls Section - Large and Easy to Tap -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="26dp"
            android:paddingBottom="6dp">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_previous"
                android:scaleType="centerInside"
                android:padding="15dp"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:contentDescription="@string/play_pause"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_next"
                android:scaleType="centerInside"
                android:padding="15dp"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
