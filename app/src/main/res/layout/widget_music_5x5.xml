<?xml version="1.0" encoding="utf-8"?>
<!-- 5x5 Widget - Premium Layout with Maximum Detail -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="28dp">

    <!-- App Icon Branding -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/rhythm_splash_logo"
        android:contentDescription="@string/app_name"
        android:layout_gravity="top|end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0.7" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Album Art Section - Large and Prominent -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/album_art"
                android:background="@drawable/album_art_background"
                android:layout_margin="16dp"
                android:clipToOutline="true" />
        </FrameLayout>

        <!-- Song Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_song_playing"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/widget_on_surface_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_artist"
                android:textSize="18sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/widget_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_album"
                android:textSize="16sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textAlignment="center"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Playback Progress (placeholder for future enhancement) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="24dp"
            android:background="@color/widget_outline_dark"
            android:alpha="0.3" />

        <!-- Controls Section - Large and Easy to Tap -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_previous"
                android:scaleType="centerInside"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:contentDescription="@string/play_pause"
                android:scaleType="centerInside"
                android:padding="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_next"
                android:scaleType="centerInside"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
