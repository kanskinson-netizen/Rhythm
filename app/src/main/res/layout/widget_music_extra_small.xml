<?xml version="1.0" encoding="utf-8"?>
<!-- 2x1 Extra Small Widget - Minimal Horizontal Layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="10dp">

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <!-- Album Art with enhanced rounded corners -->
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/album_art"
            android:background="@drawable/album_art_background"
            android:clipToOutline="true"
            android:elevation="2dp" />

        <!-- Song Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_song_playing"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_on_surface_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_artist"
                android:textSize="10sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_play_arrow"
            android:background="@drawable/widget_button_background_primary"
            android:contentDescription="@string/play_pause"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:elevation="2dp" />
    </LinearLayout>

</FrameLayout>
