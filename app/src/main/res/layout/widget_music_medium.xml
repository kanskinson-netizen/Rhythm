<?xml version="1.0" encoding="utf-8"?>
<!-- 3x2 Medium Widget - Horizontal Layout with Full Controls -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Content -->
    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Top Section: Album Art and Song Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Album Art with enhanced rounded corners -->
            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/album_art"
                android:background="@drawable/album_art_background"
                android:clipToOutline="true"
                android:elevation="2dp" />

            <!-- Song Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/widget_song_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_song_playing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_on_surface_dark"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.15" />

                <TextView
                    android:id="@+id/widget_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_artist"
                    android:textSize="14sp"
                    android:textColor="@color/widget_on_surface_variant_dark"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"
                    android:includeFontPadding="false"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/widget_album_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_album"
                    android:textSize="12sp"
                    android:textColor="@color/widget_on_surface_variant_dark"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    android:includeFontPadding="false"
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>

        <!-- Controls Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_previous"
                android:scaleType="centerInside"
                android:padding="11dp"
                android:elevation="1dp" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:contentDescription="@string/play_pause"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:elevation="3dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_next"
                android:scaleType="centerInside"
                android:padding="11dp"
                android:elevation="1dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
